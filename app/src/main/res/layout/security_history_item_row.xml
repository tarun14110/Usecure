<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        android:layout_marginBottom="1dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/heading_layout"
                android:layout_width="fill_parent"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/takenImage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/pro" />

                <TextView
                    android:id="@+id/cardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/takenImage"
                    android:layout_alignBottom="@+id/takenImage"
                    android:text="TITLE"
                    android:shadowColor="#000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="20"
                    android:textSize="40sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_below="@+id/heading_layout"
                android:padding="5dp"
                android:text="time"
                android:textColor="#a40000"
                android:textStyle="bold"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:background="#000000" />

            <TextView
                android:id="@+id/description"
                android:padding="15dp"
                android:text="description"
                android:textColor="#666"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/by"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:id="@+id/status"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checked="true"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_below="@+id/heading_layout"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="13dp" />

            <TextView
                android:id="@+id/by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bysomeone"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:padding="10dp"
                android:textSize="15dp"
                android:textColor="#020202"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>