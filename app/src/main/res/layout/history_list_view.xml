<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FFF9F9F9"
    android:padding="10dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemHistoryImage"
        android:src="@drawable/ln_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/listItemHistoryTitle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listItemHistoryImage"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is how the content looks here, Isn't it cool ? This is how the content looks here, Isn't it cool ?"
        android:id="@+id/listItemHistoryBody"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/listItemHistoryImage"
        android:layout_below="@+id/listItemHistoryTitle"
        android:ellipsize="end"
        android:singleLine="true"
        />

</RelativeLayout>