<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="10dp"
        card_view:contentPadding="25dp"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="6dp"
        android:shape="ring"
        card_view:cardBackgroundColor="@color/colorPrimaryLight"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/listItemHistoryImage"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="1dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:id="@+id/listItemHistoryTitle"
                android:layout_toRightOf="@+id/listItemHistoryImage"
                android:layout_alignParentTop="true"
                android:textColor="#ffffff"
                android:textSize="30sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is how the content looks here, Isn't it cool ? This is how the content looks here, Isn't it cool ?"
                android:id="@+id/listItemHistoryBody"
                android:layout_toRightOf="@+id/listItemHistoryImage"
                android:textColor="#ffffff"
                android:layout_below="@+id/listItemHistoryTitle"
                />

</RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>